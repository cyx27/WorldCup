<wxs src="../../config/tick.wxs" module="tick"/>
<view class="topbarfather">
  <view class="topbar {{nowgroup?'pick':''}}" bindtap="switchtogroup">
    分组
  </view>
  <view class="topbar {{!nowgroup?'pick':''}}" style="left: 50%;" bindtap="switchtoschedule">
    赛程
  </view>
</view>

