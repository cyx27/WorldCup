<view wx:if="{{!nowgroup}}">
  <view class="scheduletit">
  <view wx:if="{{corrent==0}}">
    <view style="top: 25%;left:37%;position: absolute;">小组赛 第{{corrent+1}}轮</view>
    <view class="next" bindtap="goahead" data-operation="{{1}}">下一轮-</view>
  </view>
  <view wx:if="{{corrent>0&&corrent<=2}}">
    <view class="head" bindtap="goahead" data-operation="{{-1}}"> -上一轮 </view>
    <view style="top: 25%;left:37%;position: absolute;">小组赛 第{{corrent+1}}轮</view>
    <view class="next" bindtap="goahead" data-operation="{{1}}">下一轮- </view>
  </view>
  <view wx:if="{{corrent==3}}">
    <view class="head" bindtap="goahead" data-operation="{{-1}}"> -上一轮 </view>
    <view style="top: 25%;left:45%;position: absolute;">1/8决赛</view>
    <view class="next" bindtap="goahead" data-operation="{{1}}">下一轮- </view>
  </view>
  <view wx:if="{{corrent==4}}">
    <view class="head" bindtap="goahead" data-operation="{{-1}}"> -上一轮 </view>
    <view style="top: 25%;left:45%;position: absolute;">1/4决赛</view>
    <view class="next" bindtap="goahead" data-operation="{{1}}">下一轮- </view>
  </view>
  <view wx:if="{{corrent==5}}">
    <view class="head" bindtap="goahead" data-operation="{{-1}}"> -上一轮 </view>
    <view style="top: 25%;left:46%;position: absolute;">半决赛</view>
    <view class="next" bindtap="goahead" data-operation="{{1}}">下一轮- </view>
  </view>
  <view wx:if="{{corrent==6}}">
    <view class="head" bindtap="goahead" data-operation="{{-1}}"> -上一轮 </view>
    <view style="top: 25%;left:43%;position: absolute;">三四名决赛</view>
    <view class="next" bindtap="goahead" data-operation="{{1}}">下一轮- </view>
  </view>
  <view wx:if="{{corrent==7}}">
    <view class="head" bindtap="goahead" data-operation="{{-1}}"> -上一轮 </view>
    <view style="top: 25%;left:47%;position: absolute;">决赛</view>
  </view>
  </view>
  <view wx:for="{{schedule}}" wx:key="key" wx:for-item="item">
    <view class='whitebar' wx:if='{{index%2==0}}' style="flex-direction:row;">
      <view class="time">{{tick.bar(item["start_play"])}} </view>
      <view class="teamname" style="left: 41%;">{{item['team_A_name']}}</view>
      <image src="{{item['team_A_logo']}}" class="flag" style="position: absolute;top:20%;left: 56%;"/> 
      <view style="position: absolute;top:4%;left: 63%;font-size: 25rpx;">VS</view> 
      <image src="{{item['team_B_logo']}}" class="flag" style="position: absolute;top:20%;left: 68%;"/> 
      <view class="teamname" style="left: 76%;">{{item['team_B_name']}}</view>
    </view>
    <view class='greybar' wx:if='{{index%2==1}}' style="flex-direction:row;">
      <view class="time">{{tick.bar(item["start_play"])}} </view>
      <view class="teamname" style="left: 41%;">{{item['team_A_name']}}</view>
      <image src="{{item['team_A_logo']}}" class="flag" style="position: absolute;top:20%;left: 56%;"/> 
      <view style="position: absolute;top:4%;left: 63%;font-size: 25rpx;">VS</view> 
      <image src="{{item['team_B_logo']}}" class="flag" style="position: absolute;top:20%;left: 68%;"/> 
      <view class="teamname" style="left: 76%;">{{item['team_B_name']}}</view>
    </view>
  </view>
</view>