<!--pages/votelist/votelist.wxml-->
<view class="main">
  <view class="pic">
    <image src="/image/mid_bk.jpg"></image>
  </view>

  <view class="container" style="background-color: #F2F2F2;">

<!-- 这是前三名的信息, 优化一下布局 -->
 
  <view class="rank">

    <view style="position: absolute; left: 36rpx; top: 320rpx">
      <image src="/image/medal-silver.png" style="position: absolute; left: 38rpx; top: -192rpx; width: 94rpx; height: 100rpx; display: block; box-sizing: border-box"></image>
      <image src="{{winners3[one].url}}" style="position: absolute; height: 100rpx; width: 94rpx; left: 38rpx; top: -92rpx"></image>
      当前票数：{{winners3[one].vote}}
    </view>

    <view style="position: absolute; left: 296rpx; top: 269rpx">
      <image src="/image/medal-gold.png" style="position: absolute; left: 32rpx; top: -196rpx; width: 94rpx; height: 100rpx; display: block; box-sizing: border-box"></image>
      <image src="{{winners3[zero].url}}" style="position: absolute; height: 100rpx; width: 94rpx; left: 32rpx; top: -96rpx"></image>
      当前票数：{{winners3[zero].vote}}
    </view>
    
    <view style="position: absolute; left: 526rpx; top: 346rpx">
      <image src="/image/medal-bronze.png" style="position: absolute; left: 40rpx; top: -178rpx; width: 94rpx; height: 100rpx; display: block; box-sizing: border-box"></image>
      <image src="{{winners3[two].url}}" style="position: absolute; height: 100rpx; width: 94rpx; left: 40rpx; top: -78rpx"></image>
      当前票数：{{winners3[two].vote}}
    </view> 
  </view>
    <!-- <button bindtap="resetVote" style="border: solid;">重置</button> -->
    <view class="list">
      <view class="box" wx:for-items="{{q32}}" wx:key="index" style="width: 22vw; height: 22vh; border: solid 2rpx; margin-top: 10rpx;">
        <navigator url="/pages/vote_each/vote_each?teamId={{item.name}}&teamName={{item.value}}&url={{item.url}}&vote={{item.vote}}">
            <text class="text" space="nbsp" style="left: 0; right: 0; margin-top: 8rpx;">{{item.value}}</text>
            <view class="pic" style="width: 20vw; height: 10vh; margin-top: 0%; margin-left: 1vw;">
            <image src="{{item.url}}" mode="aspectFill" style="width: 20vw; height: 10vh;"></image>
            </view>
        </navigator>
        
        <view>目前票数:{{q32[index].vote}}</view>
        <button class="center" wx:if="{{userQ32[index]!=1}}" style="width: 18vw;height: 4vh; font-size: 22rpx;  padding-left: 40rpx;" bindtap="vote" data-name="{{item.name}}" disabled="{{ userQ32[index]==1 }}" >投票</button>
        <button class="center" wx:else style="width: 18vw;height: 4vh; font-size: 22rpx;  padding-left: 40rpx; background-color: #01DF01; color: white;" bindtap="vote" data-name="{{item.name}}" disabled="{{ userQ32[index]==1 }}" >已投</button>
      </view>

    </view>
  
  </view>

</view>
