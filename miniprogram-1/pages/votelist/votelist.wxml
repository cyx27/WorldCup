<!--pages/votelist/votelist.wxml-->
<view class="main">
  <view class="pic">
    <image src="/image/mid_bk.jpg"></image>
  </view>
  <view class="container" style="background-color: #F2F2F2;">
  <view class="rank">
    <view style="height: 12vh; width: 20vw;"><image src="/image/medal-silver.png" style="height: 12vh; width: 20vw;"></image></view>
    <view style="height: 12vh; width: 20vw;"><image src="/image/medal-gold.png" style="height: 12vh; width: 20vw;"></image></view>
    <view style="height: 12vh; width: 20vw;"><image src="/image/medal-bronze.png" style="height: 12vh; width: 20vw;"></image></view>
  </view>
    <button bindtap="resetVote" style="border: solid;">重置</button>
    <view class="list">
      <view class="box" wx:for-items="{{q32}}" wx:key="index" style="width: 22vw; height: 22vh; border: solid 2rpx; margin-top: 10rpx;">
        <text class="text" space="nbsp">   {{item.value}}</text>
        <view class="pic" style="width: 20vw; height: 10vh; margin-top: 0%; margin-left: 1vw;">
          <image src="{{item.url}}" mode="aspectFill" style="width: 20vw; height: 10vh;"></image>
        </view>
        <view>目前票数:{{q32[index].vote}}</view>
        <button style="width: 18vw;height: 4vh; font-size: 25rpx;  padding-left: 40rpx;" bindtap="vote" data-name="{{item.name}}">投票</button>
      </view>

    </view>
  
  </view>

</view>
