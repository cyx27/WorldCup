/* pages/vote_each/vote_each.wxss */
.bg{
    width: 100vw;
    height: 100vh;
    background: url('https://s2.loli.net/2022/05/22/J2StGcK1sf53Rny.png');
    background-size:100% 100%;
    -moz-background-size:100% 100%;
    opacity: 0.85;
  }
.center{
    display: flex;    /*设置显示样式**/
    align-items: center;    /**子view垂直居中*/
    vertical-align: center; /**垂直居中*/
    justify-content: center; /**内容居中*/
    flex-direction:row; /**子view排列方式row--水平 column--垂直*/
}
.msg-box{
    padding: 20px;
   }
   .send-box{
    display: flex;
   }
   .input{
    border: 1px solid #ccc;
    padding: 5px;
    border-radius: 5px;
   }
   .msg-info{
    display: block;
    margin: 10px 0 0 0;
    color: #339900;
   }
   .place-input{
    color: salmon;
   }
   .list-view{
    margin: 20px 0 0 0;
    display: flex;
    flex-direction: column;
    height: 50vh;
    width: 80vw;
   }
   .item{
    margin-top: 5vw;
    border-bottom: 1px dashed #ccc;
    left: 0;
    height: 30vw;
   }
   .text1{
    float: left;
   }
   .close-btn{
    float: right;
    margin: 5px 5px 0 0;
   }